# CodeHub Backend Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ===========================================
# DJANGO SETTINGS
# ===========================================

# Django secret key - generate a new one for production
# You can generate one at: https://djecrety.ir/
DJANGO_SECRET_KEY=your-secret-key-here

# Debug mode - set to False in production
DEBUG=True

# Allowed hosts - comma separated (e.g., localhost,example.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# SUPABASE DATABASE
# ===========================================

# Database host (from Supabase Dashboard > Settings > Database)
# Format: aws-0-[region].pooler.supabase.com
SUPABASE_HOST=aws-0-ap-southeast-1.pooler.supabase.com

# Database port
# 6543 = Connection pooler (recommended)
# 5432 = Direct connection
SUPABASE_PORT=6543

# Database name (always 'postgres' for Supabase)
SUPABASE_DB=postgres

# Database user
# Format: postgres.[your-project-ref]
# Find project ref in your Supabase URL: https://[project-ref].supabase.co
SUPABASE_USER=postgres.your-project-ref

# Database password (set when creating Supabase project)
SUPABASE_PASSWORD=your-database-password

# ===========================================
# EMAIL SETTINGS (for password reset)
# ===========================================

# Email backend
# Development: django.core.mail.backends.filebased.EmailBackend
# Production: django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.filebased.EmailBackend

# SMTP settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===========================================
# CORS SETTINGS
# ===========================================

# Allowed origins - comma separated
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:8000

# ===========================================
# FRONTEND URL
# ===========================================

# Frontend URL for password reset links
FRONTEND_URL=http://localhost:5173
